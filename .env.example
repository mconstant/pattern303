# Treasury wallet address to receive minting fees
# Replace with your Solana wallet address
VITE_TREASURY_WALLET=YOUR_SOLANA_WALLET_ADDRESS_HERE

# 303 Token Mint address (optional)
# Replace with your token mint address for community features
VITE_303_TOKEN_MINT=YOUR_TOKEN_MINT_ADDRESS_HERE

# Minting fee in SOL (default: 0.0303)
VITE_MINT_FEE_SOL=0.0303

# P303 Collection NFT address (required for global discovery)
# Create this once using createCollectionNFT() then add the address here
VITE_COLLECTION_ADDRESS=YOUR_COLLECTION_ADDRESS_HERE

# Helius RPC API Key (recommended for better reliability)
# Sign up at https://helius.dev for free tier
VITE_HELIUS_API_KEY=YOUR_HELIUS_API_KEY_HERE

# Verification Service Configuration (Backend)
# URL where the verification service is running
VITE_VERIFY_API_URL=https://your-domain.com

# Backend Service Environment Variables (Runtime, not build-time)
# These are NOT prefixed with VITE_ because they're server-side only
COLLECTION_ADDRESS=YOUR_COLLECTION_ADDRESS_HERE
VERIFICATION_WALLET_PKEY=[your,private,key,array]
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_KEY
